<?php

namespace Addons\CourseList\Controller;
use Home\Controller\AddonsController;

class CourseListController extends AddonsController{
    public function course(){
        $openid=$_GET['openid'];
        $mb=substr($openid, 9);
        $mmc = new \Think\Cache\Driver\Memcachesae();
        $ret = $mmc->connect();
        if(!$mmc->get($mb)){
            $user=M('user');
            $data=$user->where("openid=".'"'.$openid.'"')->getField('webcourse');
            //设置缓存过期时间为一周
            $mmc->set($mb, $data, false, 24*3600*7);
            $day=json_decode($data,true);    
            $this->assign('day',$day);
            $this->display();     
        }else{
            $data=$mmc->get($mb);
            $day=json_decode($data,true);    
            $this->assign('day',$day);
            $this->display();   
        }    
    }

    public function ycourse(){
        $openid=get_openid();
        $ma=substr($openid, 8);
        $mm = new \Think\Cache\Driver\Memcachesae();
        $re = $mm->connect();
        if(!$mm->get($ma)){
            $user=M('user');
